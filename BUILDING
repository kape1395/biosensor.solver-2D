./configure "CXXFLAGS=-g -O2 -ansi -Wall -DLOG_LEVEL_DEBUG" "LDFLAGS=-lprofiler" --prefix=`pwd`/tmp-profiler-g7 --with-boost-filesystem=boost_filesystem-mt


